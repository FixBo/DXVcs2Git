<UserControl x:Class="DXVcs2Git.UI.ProcessMergeRequestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:viewModels="clr-namespace:DXVcs2Git.UI.ViewModels"
             xmlns:views="clr-namespace:DXVcs2Git.UI.Views"
             xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <ResourceDictionary>
            <dxmvvm:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></dxmvvm:BooleanToVisibilityConverter>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <dxr:RibbonControl >
            <dxr:RibbonDefaultPageCategory>
                <dxr:RibbonPage Caption="Main">
                    <dxr:RibbonPageGroup>
                        <dxb:BarButtonItem
                            RibbonStyle="Large" 
                            GlyphSize="Large" 
                            Content="Create"
                            Command="{Binding Path=CreateMergeRequestCommand}">
                        </dxb:BarButtonItem>
                        <dxb:BarButtonItem
                            RibbonStyle="Large" 
                            GlyphSize="Large" 
                            Content="Edit"
                            Command="{Binding Path=EditMergeRequestCommand}">
                        </dxb:BarButtonItem>
                    </dxr:RibbonPageGroup>
                </dxr:RibbonPage>
            </dxr:RibbonDefaultPageCategory>
        </dxr:RibbonControl>

        <dxg:GridControl x:Name="grid" ItemsSource="{Binding Path=MergeRequest.Changes}">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="ChangeMode" FixedWidth="True" Width="70">
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="Path">
                </dxg:GridColumn>
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView 
                    ShowGroupPanel="False" 
                    NavigationStyle="Row" 
                    AutoWidth="True">
                </dxg:TableView>
            </dxg:GridControl.View>
        </dxg:GridControl>
        <views:EditMergeRequestControl 
            DataContext="{Binding Path=EditMergeRequest}"
            Visibility="{Binding Path=IsInEditingMergeRequest, Converter={StaticResource BooleanToVisibilityConverter}}"
            Grid.Row="1">
        </views:EditMergeRequestControl>
        <avalonEdit:TextEditor 
            Grid.Column="1" 
            FontFamily="Consolas" 
            Grid.Row="0" Grid.RowSpan="2"
            IsReadOnly="True">
            <dxmvvm:Interaction.Behaviors>
                <viewModels:AvalonEditTextBindingBehavior Text="{Binding Path=SelectedItem.Diff, ElementName=grid}"/>
            </dxmvvm:Interaction.Behaviors>
        </avalonEdit:TextEditor>
    </Grid>
</UserControl>
