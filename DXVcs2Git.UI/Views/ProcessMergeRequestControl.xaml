<UserControl x:Class="DXVcs2Git.UI.ProcessMergeRequestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:viewModels="clr-namespace:DXVcs2Git.UI.ViewModels"
             xmlns:views="clr-namespace:DXVcs2Git.UI.Views"
             xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <ResourceDictionary>
            <dxmvvm:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></dxmvvm:BooleanToVisibilityConverter>
            <dxmvvm:ObjectToObjectConverter x:Key="CollapsedConverter">
                <dxmvvm:MapItem Source="{x:Null}">
                    <dxmvvm:MapItem.Target>
                        <Visibility>Collapsed</Visibility>
                    </dxmvvm:MapItem.Target>
                </dxmvvm:MapItem>
            </dxmvvm:ObjectToObjectConverter>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <dxr:RibbonControl >
            <dxr:RibbonDefaultPageCategory>
                <dxr:RibbonPage Caption="Main">
                    <dxr:RibbonPageGroup>
                        <dxb:BarButtonItem
                            RibbonStyle="Large" 
                            GlyphSize="Large" 
                            Content="Create"
                            Command="{Binding Path=SelectedBranch.CreateMergeRequestCommand}">
                        </dxb:BarButtonItem>
                        <dxb:BarButtonItem
                            RibbonStyle="Large" 
                            GlyphSize="Large" 
                            Content="Edit"
                            Command="{Binding Path=SelectedBranch.EditMergeRequestCommand}">
                        </dxb:BarButtonItem>
                        <dxb:BarItemSeparator/>
                        <dxb:BarButtonItem
                            RibbonStyle="Large" 
                            GlyphSize="Large" 
                            Content="Force"
                            Command="{Binding Path=SelectedBranch.ForceMergeCommand}">
                        </dxb:BarButtonItem>
                    </dxr:RibbonPageGroup>
                </dxr:RibbonPage>
            </dxr:RibbonDefaultPageCategory>
        </dxr:RibbonControl>

        <dxlc:DockLayoutControl Grid.Row="1">
            <dxlc:LayoutGroup Orientation="Horizontal" dxlc:DockLayoutControl.Dock="Top">
                <dxlc:LayoutItem Label="Selected repository: " HorizontalAlignment="Center">
                    <TextBlock Text=""></TextBlock>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="Selected branch: " HorizontalAlignment="Center">
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup Orientation="Horizontal" dxlc:DockLayoutControl.Dock="Client">
                <dxlc:LayoutControl>
                    <dxlc:LayoutGroup Orientation="Horizontal">
                        <dxlc:LayoutGroup Orientation="Vertical">
                            <dxlc:LayoutItem HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <dxg:GridControl x:Name="grid" ItemsSource="{Binding Path=SelectedBranch.MergeRequest.Changes}" MaxHeight="2000">
                                    <dxg:GridControl.Columns>
                                        <dxg:GridColumn FieldName="ChangeMode" FixedWidth="True" Width="70">
                                        </dxg:GridColumn>
                                        <dxg:GridColumn FieldName="Path">
                                        </dxg:GridColumn>
                                    </dxg:GridControl.Columns>
                                    <dxg:GridControl.View>
                                        <dxg:TableView 
                                            ShowGroupPanel="False" 
                                            NavigationStyle="Row" 
                                            AutoWidth="True">
                                        </dxg:TableView>
                                    </dxg:GridControl.View>
                                </dxg:GridControl>
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                                <views:EditMergeRequestControl>
                                    <views:EditMergeRequestControl.Visibility>
                                        <PriorityBinding>
                                            <Binding Path="SelectedBranch.IsInEditingMergeRequest" Converter="{StaticResource BooleanToVisibilityConverter}"/>
                                            <Binding Path="SelectedBranch" Mode="OneWay" Converter="{StaticResource CollapsedConverter}"/>
                                        </PriorityBinding>
                                    </views:EditMergeRequestControl.Visibility>
                                </views:EditMergeRequestControl>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>
                        <dxlc:LayoutGroup>
                            <dxlc:LayoutItem>
                                <avalonEdit:TextEditor 
                                    FontFamily="Consolas" 
                                    IsReadOnly="True">
                                    <dxmvvm:Interaction.Behaviors>
                                        <viewModels:AvalonEditTextBindingBehavior Text="{Binding Path=SelectedItem.Diff, ElementName=grid}"/>
                                    </dxmvvm:Interaction.Behaviors>
                                </avalonEdit:TextEditor>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>
                    </dxlc:LayoutGroup>
                </dxlc:LayoutControl>
            </dxlc:LayoutGroup>
        </dxlc:DockLayoutControl>
    </Grid>
</UserControl>
