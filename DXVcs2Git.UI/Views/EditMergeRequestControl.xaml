<UserControl x:Class="DXVcs2Git.UI.Views.EditMergeRequestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             KeyboardNavigation.TabNavigation="Cycle">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <dxlc:LayoutControl>
            <dxlc:LayoutGroup Orientation="Vertical">
                <dxlc:LayoutItem Label="Title: ">
                    <dxe:TextEdit ValidateOnTextInput="False" EditValue="{Binding Path=Title, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="Description: " Height="150">
                    <dxe:TextEdit 
                        VerticalContentAlignment="Top"
                        VerticalScrollBarVisibility="Auto"
                        ValidateOnTextInput="False" 
                        EditValue="{Binding Path=Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}"
                        AcceptsReturn="True">
                    </dxe:TextEdit>
                </dxlc:LayoutItem>
                <dxlc:LayoutGroup Orientation="Horizontal">
                    <dxlc:LayoutItem Label="Target branch: ">
                        <dxe:ComboBoxEdit/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="Source branch: ">
                        <dxe:ComboBoxEdit/>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
                <dxlc:LayoutGroup>
                    <dxlc:LayoutItem Label="Assign to: ">
                        <dxe:ComboBoxEdit/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem>
                        <Button Content="Assign to service"/>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
        </dxlc:LayoutControl>
        <dxlc:LayoutControl Grid.Row="2">
            <dxlc:LayoutGroup Orientation="Horizontal">
                <dxlc:LayoutItem>
                    <Button>Edit</Button>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem>
                    <Button>Apply</Button>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem>
                    <Button>Cancel</Button>
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>
        </dxlc:LayoutControl>
    </Grid>
</UserControl>
