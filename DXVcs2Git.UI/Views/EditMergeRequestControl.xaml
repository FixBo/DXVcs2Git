<UserControl x:Class="DXVcs2Git.UI.Views.EditMergeRequestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             KeyboardNavigation.TabNavigation="Cycle">
    <Grid DataContext="{Binding Path=SelectedBranch.EditableMergeRequest}">
        <dxlc:LayoutControl>
            <dxlc:LayoutGroup Orientation="Vertical">
                <dxlc:LayoutItem Label="Description: " Height="100">
                    <dxe:TextEdit 
                        VerticalContentAlignment="Top"
                        VerticalScrollBarVisibility="Auto"
                        ValidateOnTextInput="False" 
                        EditValue="{Binding Path=Comment, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}"
                        AcceptsReturn="True">
                    </dxe:TextEdit>
                </dxlc:LayoutItem>
                <dxlc:LayoutGroup>
                    <dxlc:LayoutItem Label="Assign to: ">
                        <dxe:ComboBoxEdit 
                            ShowCustomItems="True"
                            AutoComplete="True" 
                            IsTextEditable="False"
                            DisplayMember="Name"
                            ItemsSource="{Binding Path=Users}"
                            AllowItemHighlighting="False"
                            EditValue="{Binding Path=SelectedUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        </dxe:ComboBoxEdit>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem>
                        <Button Content="Assign to service" Command="{Binding Path=AssignToServiceCommand}"/>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
                <dxlc:LayoutGroup Orientation="Horizontal">
                    <dxlc:LayoutItem>
                        <Button Content="Close" Command="{Binding Path=CloseMergeRequestCommand}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem>
                        <Button Content="Apply" Command="{Binding Path=ApplyMergeRequestCommand}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem>
                        <Button Content="Cancel" Command="{Binding Path=CancelMergeRequestCommand}"/>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
        </dxlc:LayoutControl>
    </Grid>
</UserControl>
